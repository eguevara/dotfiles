// Place your settings in this file to overwrite the default settings
{
  "vim.hlsearch": true,
  "vim.leader": ",",
  "vim.useCtrlKeys": false,
  "vim.commandLineModeKeyBindings": [],
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "j",
        "j"
      ],
      "after": [
        "<Esc>"
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "leader",
        "<space>"
      ],
      "after": [],
      "commands": [
        {
          "command": ":nohl"
        }
      ]
    },
    {
      "before": [
        "leader",
        "q"
      ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.closeActiveEditor"
        }
      ]
    },
    {
      "before": [
        "leader",
        "w"
      ],
      "commands": [
        "workbench.action.files.save"
      ]
    },
    {
      "before": [
        "leader",
        "g"
      ],
      "after": [],
      "commands": [
        {
          "command": "editor.action.revealDefinition",
          "args": []
        }
      ]
    },
    {
      "before": [
        "leader",
        "B"
      ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.navigateToLastEditLocation",
          "args": []
        }
      ]
    },
    {
      "before": [
        "leader",
        "b"
      ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.navigateBack",
          "args": []
        }
      ]
    },
    {
      "before": [
        "leader",
        ","
      ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.previousEditor",
          "args": []
        }
      ]
    },
    {
      "before": [
        "leader",
        "r"
      ],
      "after": [],
      "commands": [
        {
          "command": "test-explorer.run-test-at-cursor",
          "args": []
        }
      ]
    },
    {
      "before": [
        "leader",
        "R"
      ],
      "after": [],
      "commands": [
        {
          "command": "test-explorer.run-file",
          "args": []
        }
      ]
    },
    {
      "before": [
        "leader",
        "d"
      ],
      "after": [],
      "commands": [
        {
          "command": "test-explorer.debug-test-at-cursor",
          "args": []
        }
      ]
    }
  ],
  "editor.tabSize": 5,
  "editor.cursorStyle": "line",
  "editor.lineNumbers": "on",
  "editor.formatOnSave": true,
  "editor.inlineSuggest.enabled": true,
  "editor.renderWhitespace": "trailing",
  "editor.minimap.enabled": false,
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.colorTheme": "Default Light Modern",
  "indentRainbow.colors": [
    "rgba(255,255,64,0.07)",
    "rgba(127,255,127,0.07)",
    "rgba(79,236,236,0.07)",
    "rgba(115,78,236,0.07)"
  ],
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.formatOnType": true,
    "files.trimTrailingWhitespace": true,
    "editor.insertSpaces": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.rulers": [
      120
    ],
    "editor.semanticHighlighting.enabled": true
  },
  "editor.codeActionsOnSave": {},
  "outline.showBooleans": false,
  "outline.showArrays": false,
  "outline.showEnumMembers": false,
  "outline.showEvents": false,
  "outline.showFields": false,
  "outline.showFiles": false,
  "outline.showKeys": false,
  "outline.showNull": false,
  "outline.showNumbers": false,
  "outline.problems.enabled": false,
  "outline.showOperators": false,
  "outline.showPackages": false,
  "outline.showProperties": false,
  "outline.showStrings": false,
  "outline.showStructs": false,
  "outline.showTypeParameters": false,
  "outline.showVariables": false,
  "outline.showObjects": false,
  "outline.showEnums": false,
  "outline.showConstants": false,
  "breadcrumbs.symbolPath": "off",
  "editor.indentSize": "tabSize"
}
